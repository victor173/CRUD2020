<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:orientation="vertical"
                android:layout_height="match_parent">
            <TextView
                    android:layout_width="match_parent"
                    android:text="Ingreso de dato"
                    android:gravity="center"
                    android:textSize="30dp"
                    android:textColor="#000000"
                    android:textStyle="bold"

                    android:layout_height="wrap_content">

            </TextView>

            <TextView
                    android:paddingTop="30dp"
                    android:layout_width="match_parent"
                    android:text="Ingrese C贸digo"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:paddingBottom="10dp"

                    android:layout_height="wrap_content">


            </TextView>

            <EditText
                    android:inputType="number"
                    android:id="@+id/et1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/botonre3"
                    android:padding="15dp">

            </EditText>

            <TextView
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:text="Descripci贸n"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:paddingBottom="10dp"

                    android:layout_height="wrap_content">


            </TextView>

            <EditText
                    android:id="@+id/et2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/botonre3"
                    android:padding="15dp">

            </EditText>

            <TextView
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:text="Precio"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:paddingBottom="10dp"

                    android:layout_height="wrap_content">


            </TextView>

            <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity=""
            >

                <EditText
                        android:inputType="numberDecimal"
                        android:id="@+id/et3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/botonre3"
                        android:hint="Formato: 0.00"
                        android:layout_marginRight="130dp"
                        android:padding="15dp">

                </EditText>

                <ImageButton

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/botonre2"
                        android:onClick="limpiardat2"
                        android:src="@drawable/clear_foreground">

                </ImageButton>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:text="Consulte por:"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:paddingBottom="10dp"

                    android:layout_height="wrap_content">


            </TextView>

            <androidx.appcompat.widget.LinearLayoutCompat

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="2dp"
                    android:gravity="center"

            >


                <Button
                        android:id="@+id/concod"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/botonre4"

                        android:onClick="consultcod"

                        android:text="C贸digo"
                        android:textColor="#FFF" />


                <Button
                        android:id="@+id/condes"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/botonre4"

                        android:onClick="consuldesc"

                        android:text="Descripci贸n"
                        android:textColor="#FFFF" />






            </androidx.appcompat.widget.LinearLayoutCompat>

            <Button
                    android:id="@+id/btgrd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/botonre2"

                    android:onClick="guardar"
                    android:text="Guardar"
                    android:textColor="#FFFFFF">


            </Button>

            <Button
                    android:id="@+id/btnmod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/botonre4"

                    android:onClick="modi"
                    android:text="MODIFICAR"
                    android:textColor="#FFFFFF">


            </Button>

            <Button
                    android:id="@+id/btdell"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="80dp"
                    android:background="@drawable/botonre"
                    android:onClick="bajacod"
                    android:text="Borrar"
                    android:textColor="#FFFFFF">


            </Button>






        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>